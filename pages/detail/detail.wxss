.bottom_item{
	display: flex;
  position: fixed;
	bottom: 0;
  height: 50px;
	width: 100%;
  justify-content: space-around;
}
.bottom_item .icon_service{
	border-right: 1px solid #E0E0E0;
  display:flex;
  width:30%;
  background-color: #fff;
	color: #333;
  align-items: center;
  text-align: center;
  justify-content: center;
  font-size: 16px;
  padding: 0 5px;
}
.bottom_item .icon_service2{
	border-right: 1px solid #E0E0E0;
  display:flex;
  width:20%;
  background-color: #fff;
	color: #333;
  padding: 0 5px;
}
.bottom_item .icon_service3{
	border-right: 1px solid #E0E0E0;
  display:flex;
  width:15%;
  background-color: #fff;
	color: #333;
  padding: 0 5px;
}
.bottom_item .icon_service image{
	width: 40px;
  height:40px;

}
.bottom_item .icon_service image.kefuimg{
  width: 35px;
  height:35px;

}
.btn2{
  background: #fff;
  width: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn2::after{
  border: 0px;
  width: 50px;
  height: 40px;
}
.bottom_item .icon_service.buy_btn{
	background-color: #FF1500;
  color: #fff;
}
.bottom_item .icon_service.buy_btn2{
	background-color: rgb(230, 169, 39);
  color: #fff;
}

.btn{
  display: flex;
  justify-content: center;
  padding: 8px 5px;
}

.add_item_show{
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
}
.add_item_show .buy_cont{
	background-color: #fff;
	position: absolute;
	bottom: 0;
	width: 100%;
}
.add_item_show .shopcar{
	height: 120px;
	padding: 10px;
}
.add_item_show .shopcar>view{
	height: 60px;
}
.add_item_show .shopcar_top{
	position: relative;
	border-bottom: 1px solid #f3f3f3;
}
.add_item_show .shopcar_top>view{
	float: left;
}
.add_item_show .pro_pic{
	position: relative;
	top: -30px;
	width: 60px;
	height: 60px;
}
.add_item_show .pro_pic image{
	width: 100%;
	height: 100%;
}
.add_item_show .shopcar_top .close{
	position: absolute;
	width: 20px;
	height: 20px;
	text-align: center;
	line-height: 20px;
	color: #ccc;
	top: 0px;
	right: 0px;
}
.add_item_show .shopcar_top .kucun{
	font-size: 28rpx;
	color: #333;
}
.add_item_show .shopcar_top .price{
	font-size: 36rpx;
	color: #ff6662;
}

.add_item_show .buy_cont .true_btn{
	text-align: center;
	padding: 15px;
	font-size: 14px;
	background-color: #ff6662;
	color: #fff;
}