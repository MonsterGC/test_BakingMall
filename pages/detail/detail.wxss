
.container{
	margin-bottom: 65px;
}
.banner{
	width: 100%;
	height: 600rpx;
}
.banner image{
	width: 100%;
	height: 100%;
}
.proMsg{
	background-color: white;
}
.proMsg .proName{
	padding: 20rpx 20rpx 10rpx;
	font-size: 16px;
	line-height: 22px; 
	color: rgb(133, 130, 130);
}
.proMsg .price{
	color: #ff2c00;
	font-size: 14px;
	margin-left: 20rpx;
	line-height: 80rpx;
}
.proMsg .right{
	color: #757575;
  text-decoration:line-through;
	font-size: 12px;
	margin-left: 20rpx;
	line-height: 80rpx;
}
.proMsg .salse{
	display: flex;
	padding: 10rpx 20rpx;
	border-top: 10px solid #F4F4F4;
  border-bottom: 10px solid #F4F4F4;
	font-size: 15px;
	color: #333;
}
.num{
	font-size: 15px;
	color: #333;
  width: 100%;
  padding: 10px;
}
.num>view{
  align-content: center;
}
.num .sl{
	float: left;
}

.num .buynum{
    display: flex;
    height: 40rpx;
    width: 30%;
    text-align: center;
    line-height: 40rpx;
    float: right;
    color: #CCCCCC;
    font-weight: bold;
    font-size: 18px;
}
.num .buynum .nownum{
    flex: 1;
    border-left: 3rpx solid #CCCCCC;
    border-right: 3rpx solid #CCCCCC;
    font-weight: normal;
    font-size: 16px;
}
.num .disnum,.num .addnum{
    width: 40rpx;
}

