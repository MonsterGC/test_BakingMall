.search {
  width: 100%;
}

.search input {
  background: #ebebeb;
  color: #666;
  margin: 6px auto;
  width: 86%;
  padding: 8px;
  display: flex;
  justify-content: center;
  text-align: center;
  border-radius: 4px;
}

.trade-box {
  background-color: #ebebeb;
  border-bottom: 10px solid #f2f2f2;
  padding-top: 5px;
}

.tradebox-title {
  font-size: 15px;
  display: flex;
  width: 100%;
  padding-left: 8px;
  background-color: #ebebeb;
  margin: 5px 8px;
  border-left: 4px solid #ff2c00;
  line-height: 30px;
  font-weight: bold;
}

.tradebox-title text {
  border-left: 2px solid #ff2c00;
  padding-left: 8px;
  margin: 3px 0px;
  color: #ff2c00;
}

.trade-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  background: #ebebeb;
}
.cs_button{
  border: 0px;
  width: 50px;
  height: 40px;
  background: #fff;
}
.cs_button::after{
  border: 0px;
  width: 50px;
  height: 40px;
}
.trade {
  width: 42%;
  background: #fff;
  margin: 5px;
  padding: 5px;
}

.trade image {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.trade-title {
  font-size: 14px;
  color: #212121;
  font-weight: bold;
  display: flex;
  padding: 8px 0px 5px;
}

.remark {
  font-size: 14px;
  color: #ff2c00;
  font-weight: bold;
}

.salnum {
  font-size: 12px;
  color: #787878;
  float: right;
  margin-right: 5px;
  font-weight: normal;
}

.xinxi {
  position: fixed;
  bottom: 20px;
  left: 85%;
  background-color: #fff;
  border-radius: 50%;
  width: 40px;
  height: 40px;
