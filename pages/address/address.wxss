page{
	background: #F4F4F4;
}
/*收货地址*/
.address{
	padding-left: 40rpx;
  padding-right: 40rpx;
  color: #636563;
  font-size: 14px;
  line-height: 70rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.add-info{
  display: flex;
  justify-content: space-between;
}

.productCount {
  border-bottom: 1rpx solid #f3f3f3;
  border-top: 1rpx solid #f3f3f3;
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
}

.productCount>button {
  margin: 20rpx 15rpx;
  font-size: 12px;
  align-items: center;
  border-radius: 15%;
  border: 1px #ABABAB solid;
  color:#333;
  background: #fff;
}
.productCount>button.btnorg{
  background: #FF2C00;
  color: #fff;
  border: 1px #FF2C00 solid;
}
.productCount radio{
  margin:20rpx 15rpx;
}
.add{
  position: absolute;
  bottom: 10px;
  width: 100%;
}
.add button{
  border-radius: 22px;
  background: #FF2C00;
  color: #fff;
  margin: 10px 20px;
}