/* pages/shopcart/shopcart.wxss */
.line {
  height: 1rpx;
  max-height: 1rpx;
  line-height: 1rpx;
  border-top: #f2f2f2 solid 1rpx;
}
.cart-shop-list {
  margin-bottom: 200rpx;
}
.cart-shop-info{
  display: flex;
  padding: 15rpx;
}
.cart-shop-img {
  width: 150rpx;
  height: 150rpx;
}
.cart-info-mess{
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.cart-shop-title {
  font-size: 14px;
  color: #333;
  line-height: 25px;
  margin-right: 30px;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}

.select-info {
  font-size: 14px;
  color: #999;
padding-top: 10rpx;
}
.cart-remark-num{
  display: flex;
  padding-top: 10rpx;
}
.cart-shop-price {
  font-size: 14px;
  color: #ff2c00;
width: 20%;
}
.cart-select{
  width: 80%;
  display: flex;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}
.option {
  font-size: 14px;
    float: right;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.cart-count-option:nth-child(2){
  border-right: #919191 solid 1rpx;
  border-left: #919191 solid 1rpx;
}
.bottom-pay {
  display: flex;
  text-align: center;
  padding: 0rpx 20rpx;
  background-color: #f2f2f2;
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #7a7a7a;
}
.select_all {
  padding: 30rpx 20rpx 10rpx;
  font-size: 32rpx;
  align-items:center;
}
.select_all checkbox{
  border-radius: 50%;
}
.total-count-money {
  padding: 30rpx 20rpx 10rpx;
  align-items:center;
  color: #333;
  font-size: 15px;
  background-color: #f2f2f2;
  flex: 1;
  float: right;
}
.total-count-money view{
  font-size: 13px;
  color: #ff2c00;
  float: right;
}
.total-count-money view.yf_msg{
  color: #999;
}
.btn-area-button {
  background-color: #FF1B00;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  font-weight: normal;
  margin: 0 20rpx 0 40rpx;
  border-radius: 0;
  border-width: 0;
  height: 100%;
  padding-top: 10rpx;
}


