.navTopList {
  display: flex;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.navTopList .order-info {
  padding-top: 30rpx;
  text-align: center;
  flex: 1;
}

.navTopList .order-info text {
  font-size: 34rpx;
}

.navTopList .order-info text.active {
  color: #ff6662;
}
.right-item {
  display: none;
}

.right-item.active {
  display: flex;
  flex-direction: column;
}
.active_block {
    margin-bottom: 10px;
}
.active_goods_name {
    background-color: #FFF;
    padding: 7px 10px;
    font-size: 14px;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.video{
  width: 100%;
}